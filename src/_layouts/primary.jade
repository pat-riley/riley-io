    block title
      title Riley

    block meta
      meta(name='description', content='The work of Pat Riley')

      // Twitter Card data
      meta(name='twitter:card', content='summary')
      meta(name='twitter:site', content='@riley_io')
      meta(name='twitter:title', content='')
      meta(name='twitter:description', content='')
      meta(name='twitter:image', content='')

      // Open Graph data (Facebook and Reddit)
      meta(property='og:title', content='')
      meta(property='og:type', content='article')
      meta(property='og:url', content='riley.io/')
      meta(property='og:image', content='')
      meta(property='og:description', content='')
      meta(property='og:site_name', content='')

    // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable', content='yes')
    link(rel='icon', sizes='192x192', href='/images/touch/chrome-touch-icon-192x192.png')

    // Add to homescreen for Safari on iOS
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='' s18n-attrs="content")
    link(rel='apple-touch-icon-precomposed', href='apple-touch-icon-precomposed.png')

    // Tile icon for Win8 (144x144 + tile color)
    meta(name='msapplication-TileImage', content='/images/touch/ms-touch-icon-144x144-precomposed.png')
    meta(name='msapplication-TileColor', content='#1D3E92')
    
    // Favicon
    link(rel="shortcut icon", href="/favicon.ico")
    
    link(rel='stylesheet', href='/styles/main.css' data-instant-track)
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Montserrat:400,700')
    include ../_includes/scripts.html

  body
    .off-canvas-wrap.container(class='#{bodyClass}' data-offcanvas)
      .inner-wrap
        block content

        block footer
          include ../_includes/footer
      
        a.exit-off-canvas
    
    block scripts
      +jademin('/scripts/main.min.js')
        script(src='/jquery/dist/jquery.js')
        script(src='/instantclick/instantclick.js')
        script(src='/bootstrap/dist/js/bootstrap.js')
        script(src='/_scripts/init.js')
